    <style>
        :root {
            --snow-white: #fefefe;
            --forest-green: #1a4d3a;
            --saffron-yellow: #ff9500;
            --earthy-brown: #8b4513;
            --mountain-blue: #2c5282;
            --mist-gray: #e2e8f0;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, var(--snow-white) 0%, var(--mist-gray) 100%);
            color: var(--earthy-brown);
        }
        
        .heading-font { font-family: 'Playfair Display', serif; }
        .script-font { font-family: 'Dancing Script', cursive; }
        
        /* Hero Section */
        .hero-section {
            background: linear-gradient(rgba(26, 77, 58, 0.4), rgba(139, 69, 19, 0.6)), 
                        url('https://images.unsplash.com/photo-1544735716-392fe2489ffa?q=80&w=2070&auto=format&fit=crop') center/cover;
            background-attachment: fixed;
            min-height: 100vh;
            position: relative;
            overflow: hidden;
        }
        
        /* Parallax sections */
        .parallax-section {
            background-attachment: fixed;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            position: relative;
            min-height: 60vh;
        }
        
        .day1-bg { background-image: linear-gradient(rgba(44, 82, 130, 0.7), rgba(26, 77, 58, 0.7)), url('https://images.unsplash.com/photo-1544620347-c4fd4a3d5957?q=80&w=2070&auto=format&fit=crop'); }
        .day2-bg { background-image: linear-gradient(rgba(26, 77, 58, 0.7), rgba(255, 149, 0, 0.5)), url('https://images.unsplash.com/photo-1506905925346-21bda4d32df4?q=80&w=2070&auto=format&fit=crop'); }
        .day3-bg { background-image: linear-gradient(rgba(255, 149, 0, 0.6), rgba(139, 69, 19, 0.7)), url('https://images.unsplash.com/photo-1571115764595-644a1f56a55c?q=80&w=2070&auto=format&fit=crop'); }
        .day4-bg { background-image: linear-gradient(rgba(44, 82, 130, 0.6), rgba(226, 232, 240, 0.5)), url('https://images.unsplash.com/photo-1506197603052-3cc9c3a201bd?q=80&w=2070&auto=format&fit=crop'); }
        
        /* Floating prayer flags */
        .prayer-flag {
            position: absolute;
            width: 30px;
            height: 20px;
            animation: prayerFloat 15s ease-in-out infinite;
            opacity: 0.6;
            z-index: 1;
        }
        
        @keyframes prayerFloat {
            0%, 100% { transform: translateY(0px) rotate(0deg); }
            33% { transform: translateY(-20px) rotate(2deg); }
            66% { transform: translateY(-10px) rotate(-2deg); }
        }
        
        /* Mountain mist effect */
        .mountain-mist {
            position: absolute;
            background: linear-gradient(90deg, 
                transparent 0%, 
                rgba(255, 255, 255, 0.3) 50%, 
                transparent 100%);
            height: 100px;
            width: 200%;
            animation: mistFlow 20s linear infinite;
            opacity: 0.4;
        }
        
        @keyframes mistFlow {
            0% { transform: translateX(-100%); }
            100% { transform: translateX(100%); }
        }
        
        /* Journey cards with spiritual touch */
        .journey-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border: 2px solid var(--saffron-yellow);
            border-radius: 20px;
            transition: all 0.5s cubic-bezier(0.23, 1, 0.32, 1);
            position: relative;
            overflow: hidden;
        }
        
        .journey-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, 
                transparent 0%, 
                rgba(255, 149, 0, 0.1) 50%, 
                transparent 100%);
            transition: left 0.6s ease;
        }
        
        .journey-card:hover::before {
            left: 100%;
        }
        
        .journey-card:hover {
            transform: translateY(-8px) scale(1.02);
            box-shadow: 0 20px 40px rgba(255, 149, 0, 0.2);
            border-color: var(--forest-green);
        }
        
        /* Sacred geometry decoration */
        .sacred-circle {
            width: 80px;
            height: 80px;
            border: 3px solid var(--saffron-yellow);
            border-radius: 50%;
            position: relative;
            margin: 0 auto 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(45deg, var(--snow-white), var(--mist-gray));
        }
        
        .sacred-circle::before {
            content: '';
            position: absolute;
            width: 60%;
            height: 60%;
            border: 2px solid var(--forest-green);
            border-radius: 50%;
        }
        
        /* Scroll animations */
        .fade-in-up {
            opacity: 0;
            transform: translateY(50px);
            transition: all 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        }
        
        .fade-in-up.visible {
            opacity: 1;
            transform: translateY(0);
        }
        
        .slide-in-left {
            opacity: 0;
            transform: translateX(-50px);
            transition: all 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        }
        
        .slide-in-left.visible {
            opacity: 1;
            transform: translateX(0);
        }
        
        .slide-in-right {
            opacity: 0;
            transform: translateX(50px);
            transition: all 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        }
        
        .slide-in-right.visible {
            opacity: 1;
            transform: translateX(0);
        }
        
        /* Om symbol animation */
        .om-symbol {
            color: var(--saffron-yellow);
            font-size: 2rem;
            animation: omPulse 3s ease-in-out infinite;
        }
        
        @keyframes omPulse {
            0%, 100% { opacity: 0.7; transform: scale(1); }
            50% { opacity: 1; transform: scale(1.1); }
        }
        
        /* Responsive adjustments */
        @media (max-width: 768px) {
            .hero-section, .parallax-section {
                background-attachment: scroll;
                min-height: 70vh;
            }
            
            .prayer-flag {
                display: none;
            }
            
            .mountain-mist {
                height: 50px;
            }
        }
        
        /* Custom scrollbar */
        ::-webkit-scrollbar {
            width: 8px;
        }
        
        ::-webkit-scrollbar-track {
            background: var(--mist-gray);
        }
        
        ::-webkit-scrollbar-thumb {
            background: linear-gradient(to bottom, var(--saffron-yellow), var(--forest-green));
            border-radius: 4px;
        }
        
        ::-webkit-scrollbar-thumb:hover {
            background: linear-gradient(to bottom, var(--forest-green), var(--saffron-yellow));
        }
    </style>
</head>
